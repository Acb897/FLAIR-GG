  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>FLAIR-GG Virtual Platform</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript" src="/javascripts/jqcloud.min.js"></script>
    <script type="text/javascript">
      /*!
       * Create an array of word objects, each representing a word in the cloud
       */

      var word_array = [
        <% @words.each_key do |key| %>
          {text: "<%= key %>", weight: <%= @words[key] %>},
        <% end %>
      ];

      $(function() {
        // When DOM is ready, select the container element and call the jQCloud method, passing the array of words as the first argument.
        $("#cloud").jQCloud(word_array, {width: 500, height: 350});
      });
    </script>

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/jqcloud.css" />
  </head>
  <body>
    <div class="wrapper">
      <h2><a href="https://vp.bgv.cbgp.upm.es/flair-gg-vp-server/resources">FLAIR-GG Virtual Platform</a><h2>

      <div class="sidebar">
      Keyword Search: <form action="/flair-gg-vp-server/keyword-search"><input type="text" name="keyword" width="30"><input type="submit"></form>
      </div>
      <div class="sidebar" style="clear: both;">
      Ontology URI: <form action="/flair-gg-vp-server/ontology-search"><input type="text" name="uri" width="30"><input type="submit"></form>
      </div>
      <div class="sidebar" style="clear: both;">
      <a href="/flair-gg-vp-server/wordcloud"><input type="button" value="Display Wordcloud"></a>
      </div>


      <div id="cloud" style="width: 550px; height: 350px;"></div>


      <footer class="branding">
        <small>&copy; 2023 <strong>Mark D Wilkinson</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
